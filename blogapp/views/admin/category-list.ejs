<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head")  %> 
</head>
<body>
    
    <%- include("../partials/nav")  %> 

    <div class="container mt-3">
          <div class="row">
            <div class="col-md-12 mt-3">
                <% if (action != "undefined" && action=="edit") { %>
                    <div class="alert alert-success">
                        <%= categoryid %> id numaralı kategori Güncelledi.
                    </div>
                <% } %>
                <% if (action != "undefined" && action=="create") { %>
                    <div class="alert alert-success">
                        kategori Eklendi.
                    </div>
                <% } %>
                <% if (action != "undefined" && action=="delete") { %>
                    <div class="alert alert-success">
                        kategori Silindi.
                    </div>
                <% } %>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width: 50px;">id</th>
                            <th>name</th>
                            <th style="width: 130px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% categories.forEach(category => { %>
                            <tr>
                                <td>#<%= category.dataValues.categoryid %> </td>
                                <td>
                                    <%= category.dataValues.name %> 
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-primary" href="/admin/categories/<%= category.dataValues.categoryid %>">edit</a>
                                    <a class="btn btn-sm btn-danger" href="/admin/category/delete/<%= category.dataValues.categoryid %>">delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
          </div>
    </div>
</body>
</html>



